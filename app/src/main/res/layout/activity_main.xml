<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.tv.androidtvapp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="D-Pad Demo"
        android:textSize="60sp" />

    <Button
        android:id="@+id/buttontop"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Top" />

    <!--style="@style/button_custom"-->
    <Button
        android:id="@+id/buttonbottom"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttontop"
        android:layout_marginBottom="40dp"
        android:text="Bottom" />

    <Button
        android:id="@+id/buttonright"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:text="Right" />

    <Button
        android:id="@+id/buttonleft"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonright"
        android:layout_marginStart="40dp"
        android:text="Left" />

    <ImageView
        android:id="@+id/mobile"
        android:layout_width="45dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/buttonleft"
        android:layout_alignTop="@+id/buttontop"
        android:layout_marginStart="23dp"
        android:focusable="false"
        android:src="@drawable/mobile_android"
        android:visibility="gone" />
</RelativeLayout>
